<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingRight="10dp"
    android:paddingLeft="10dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewPrograma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/imagen_programa"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="15sp" />

            <TextView
                android:id="@+id/titulo_programa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imagen_programa"
                android:textSize="18sp"
                android:textColor="@color/azul_radio_ucab"/>

            <TextView
                android:id="@+id/descripcion_programa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/titulo_programa"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_toRightOf="@+id/imagen_programa" />

            <ImageView
                android:id="@+id/imagen_programa_favorito"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_below="@id/descripcion_programa"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:tint="@color/amarillo_ucab"
                android:src="@drawable/ic_star_black_24dp"
                android:clickable="true"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>