<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="info.androidhive.radioucab.Controlador.AyudaFragment">

    <TextView
        android:id="@+id/titulo_modulo_ayuda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textSize="20sp"
        android:textColor="@color/azul_ucab"
        android:gravity="center_horizontal"
        android:text="@string/campo_encabezado_ayuda"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/titulo_ayuda_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="18sp"
        android:textColor="@color/azul_ucab"
        android:text="Ayuda 1"
        android:layout_gravity="center_horizontal|top"
        android:layout_below="@+id/titulo_modulo_ayuda" />
    <TextView
        android:id="@+id/texto_ayuda_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:textColor="@color/negro"
        android:text="Contenido de la ayuda 1. Pendiente por Radio UCAB"
        android:layout_below="@+id/titulo_ayuda_1" />

    <TextView
        android:id="@+id/titulo_ayuda_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textColor="@color/azul_ucab"
        android:text="Ayuda 2"
        android:layout_gravity="center_horizontal|top"
        android:layout_below="@+id/texto_ayuda_1" />
    <TextView
        android:id="@+id/texto_ayuda_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:textColor="@color/negro"
        android:text="Contenido de la ayuda 2. Pendiente por Radio UCAB"
        android:layout_below="@+id/titulo_ayuda_2" />

</RelativeLayout>
