<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout_detalle_programa"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="vertical">

        <TextView
            android:id="@+id/texto_titulo_programa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text="Titulo"
            android:textColor="@color/verde_ucab"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imagen_estrella_detalle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_star_black_24dp"
            android:tint="@color/list_divider"/>

        <TextView
            android:id="@+id/texto_descripcion_programa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imagen_estrella_detalle"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="descripcion"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/encabezado_tipo_programa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/texto_descripcion_programa"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/campo_encabezado_programas_tipo"
            android:textColor="@color/verde_ucab"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/texto_tipo_programa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/texto_descripcion_programa"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/encabezado_tipo_programa"
            android:text="prueba"
            android:textColor="@color/negro"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/encabezado_horarios_programa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/encabezado_tipo_programa"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="@string/campo_encabezado_programas_horarios"
            android:textColor="@color/verde_ucab"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/encabezado_locutores_programa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/campo_encabezado_programas_locutores"
            android:textColor="@color/verde_ucab"
            android:textSize="16sp"
            android:visibility="gone" />

    </RelativeLayout>

</ScrollView>