<resources>

    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="NoActionBar" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:actionOverflowButtonStyle">@style/botonMenu</item>
        <item name="android:textAllCaps">false</item>
        <item name="colorAccent">@color/azul_ucab</item>
    </style>

    <style name="botonMenu" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_flecha_abajo</item>
        <item name="android:paddingLeft">0dip</item>
        <item name="android:minWidth">0dip</item>
        <item name="android:layout_marginRight">10dip</item>
    </style>

    <style name="fondoRectangulo">
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@drawable/rectangulo</item>
    </style>

</resources>
