<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="android:windowActionBar">false</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="NoActionBar" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:actionOverflowButtonStyle">@style/botonMenu</item>
        <item name="android:textAllCaps">false</item>
        <item name="colorAccent">@color/azul_ucab</item>
    </style>

    <style name="botonMenu" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_flecha_abajo</item>
        <item name="android:paddingLeft">0dip</item>
        <item name="android:minWidth">0dip</item>
        <item name="android:layout_marginRight">10dip</item>
    </style>

    <style name="fondoRectangulo">
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@drawable/rectangulo</item>
    </style>

</resources>
