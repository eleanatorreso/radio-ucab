<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/azul_radio_ucab"
    android:gravity="center_vertical"
    android:minHeight="50dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center|right"
            android:id="@+id/imagen_usuario"
            android:layout_marginRight="20dp"
            android:visibility="gone" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/menu_perfil_usuario"
            android:textColor="@color/blanco"
            android:textSize="16dp"
            android:layout_gravity="right|center_vertical"
            android:layout_centerHorizontal="true"
            android:onClick="selfDestruct"
            android:layout_marginRight="10dp"
            android:id="@+id/botonIngresar" />

        <ImageView
            android:layout_width="42dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_menu_white_24dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="left|center_vertical"
            android:id="@+id/icono_menu"
            android:layout_marginLeft="10dp" />

    </FrameLayout>
</android.support.v7.widget.Toolbar><!-- From: file:/C:/Users/Eleana%20Torres/Documents/radio-ucab-app-movil/app/src/main/res/layout/toolbar.xml -->