<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tweet_comentario"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blanco"
    tools:context="info.androidhive.radioucab.Controlador.RegistroUsuarioFragment">

    <ImageView
        android:id="@+id/encabezado_icono_interaccion"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"
        android:gravity="left"
        android:src="@drawable/icono_comentario"
        android:layout_alignLeft="@+id/editText_tweet_comentario"
        android:layout_alignStart="@+id/editText_tweet_comentario" />

    <TextView
        android:id="@+id/texto_encabezado_editar_tweet_comentario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="@string/campo_encabezado_editar_tweet_comentario"
        android:textColor="@color/azul_ucab"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/texto_descripcion_comentario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/texto_encabezado_editar_tweet_comentario"
        android:layout_marginTop="15dp"
        android:text="@string/campo_texto_tweet_comentario"
        android:textColor="@android:color/black"
        android:textSize="16dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/texto_encabezado_finalidad_comentario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/texto_descripcion_comentario"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="15dp"
        android:text="@string/campo_encabezado_finalidad_comentario"
        android:textColor="@color/azul_radio_ucab"
        android:textSize="16dp" />

    <LinearLayout
        android:id="@+id/layout_radio_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/texto_encabezado_finalidad_comentario"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/grupo_radio_button_finalidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radiobutton_comentario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/campo_radio_button_finalidad_comentario" />

            <RadioButton
                android:id="@+id/radiobutton_sugerencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/campo_radio_button_finalidad_sugerencia" />

            <RadioButton
                android:id="@+id/radiobutton_queja"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/campo_radio_button_finalidad_queja" />
        </RadioGroup>
    </LinearLayout>

    <TextView
        android:id="@+id/texto_encabezado_comentario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_radio_buttons"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="15dp"
        android:text="@string/campo_encabezado_comentario"
        android:textColor="@color/azul_radio_ucab"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/editText_tweet_comentario"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/texto_encabezado_comentario"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/borde_text_area"
        android:hint="@string/hint_campo_tweet_comentario" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/editText_tweet_comentario"
        android:gravity="center|right"
        android:orientation="horizontal">

        <Button
            android:id="@+id/boton_enviar_comentario"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/boton_azul_claro"
            android:gravity="center"
            android:text="@string/campo_boton_enviar"
            android:textColor="@color/blanco"
            android:textSize="15dp" />
    </LinearLayout>

</RelativeLayout>
