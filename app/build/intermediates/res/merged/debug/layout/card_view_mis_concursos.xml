<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewConcurso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|top"
                android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imagen_concurso_trofeo"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_trofeo" />

                    <TextView
                        android:id="@+id/texto_nombre_concurso"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:textColor="@color/azul_ucab"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/texto_fecha_concurso"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/texto_nombre_concurso"
                        android:layout_marginTop="5dp"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/texto_descripcion_concurso"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/texto_fecha_concurso"
                        android:layout_marginTop="5dp"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/texto_estado_concurso"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/texto_descripcion_concurso"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/negro"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/texto_resultado_concurso"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/texto_estado_concurso"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/azul_ucab"
                        android:textSize="14sp" />

            </LinearLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>