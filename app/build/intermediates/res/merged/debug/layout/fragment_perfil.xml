<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_perfil"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical">

    <ImageView
        android:id="@+id/rectangulo_fondo"
        style="@style/fondoRectangulo"
        android:layout_width="fill_parent"
        android:layout_height="200dp"/>

    <ImageView
        android:id="@+id/icono_ayuda"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:tint="@color/azul_ucab"
        android:src="@drawable/ic_help_black_48dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_alignTop="@+id/imagen_perfil"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/imagen_perfil"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/texto_usuario_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imagen_perfil"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textColor="@color/lista_texto"
        android:textSize="20sp" />

    <Button
        android:id="@+id/boton_editar_perfil"
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:layout_below="@id/texto_usuario_nombre"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/boton_azul_claro"
        android:text="@string/campo_boton_editar_perfil"
        android:textColor="@color/blanco"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/texto_informacion_personal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rectangulo_fondo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/campo_texto_informacion_personal"
        android:textColor="@color/azul_ucab"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/icono_twitter"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_below="@id/texto_informacion_personal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:tint="@android:color/darker_gray"
        android:src="@drawable/ic_twitter" />

    <TextView
        android:id="@+id/texto_usuario_twitter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/texto_informacion_personal"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/icono_twitter"
        android:textColor="@color/lista_texto"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/icono_correo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/icono_twitter"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:tint="@android:color/darker_gray"
        android:src="@drawable/ic_correo" />

    <TextView
        android:id="@+id/texto_usuario_correo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/icono_twitter"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/icono_correo"
        android:textColor="@color/lista_texto"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/texto_tu_y_radio_ucab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/icono_correo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/campo_texto_tu_radio_ucab"
        android:textColor="@color/azul_ucab"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/texto_tu_y_radio_ucab"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|top"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imagen_premiacion"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:gravity="center"
                android:src="@drawable/ic_premiacion" />

            <TextView
                android:id="@+id/texto_ver_premiaciones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/campo_texto_mis_premios"
                android:textColor="@color/azul_ucab"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|top"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imagen_preferencia_noticias"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:gravity="center"
                android:src="@drawable/ic_preferencia_noticias" />

            <TextView
                android:id="@+id/texto_preferencia_noticias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/campo_texto_mis_preferencia_noticias"
                android:textColor="@color/azul_ucab"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|top"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imagen_programas_favoritos"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:gravity="center"
                android:src="@drawable/ic_favoritos" />

            <TextView
                android:id="@+id/texto_ver_programas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/campo_texto_mis_programas_favoritos"
                android:textColor="@color/azul_ucab"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
