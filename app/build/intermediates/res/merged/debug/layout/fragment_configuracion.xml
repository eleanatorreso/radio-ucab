<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/texto_titulo_configuracion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="@string/campo_encabezado_configuración"
        android:textColor="@color/gris_claro"
        android:textSize="20sp" />

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/campo_encabezado_configuración_uno"
        android:id="@+id/campo_switch_configuracion_uno"
        android:layout_below="@+id/texto_titulo_configuracion"
        android:textSize="16dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"/>

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/campo_encabezado_configuración_dos"
        android:id="@+id/campo_switch_configuracion_dos"
        android:layout_below="@+id/campo_switch_configuracion_uno"
        android:textSize="16dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/boton_actualizar_configuracion"
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:background="@drawable/boton_azul_claro"
        android:text="@string/campo_boton_guardar"
        android:textColor="@color/blanco"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@id/campo_switch_configuracion_dos"/>


</RelativeLayout>
